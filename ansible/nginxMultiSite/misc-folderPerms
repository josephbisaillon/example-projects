    - name: Fix 'nginx html' permissions
      file: path=/usr/share/nginx/html owner=ubuntu group=ubuntu mode=0775 state=directory recurse=yes
    - name: Fix 'nodejs server' permissions
      file: path=/usr/share/nginx/html owner=ubuntu group=ubuntu mode=0775 state=directory recurse=yes
